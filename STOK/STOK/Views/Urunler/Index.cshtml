
@using STOK.Models.Entity;
@model List<TBL_URUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

  @*ARAMA KISMI İÇİN..*@
@using (Html.BeginForm("Index", "Urunler", FormMethod.Get))
            {
                <p>
                    Ürün Adı: @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }


<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.URUNID</td>
            <td>@x.URUNAD</td>
            <td>@x.URUNMARKA</td>
            <td>@x.URUNSTOK</td>
            <td>@x.URUNALISFIYAT</td>
            <td>@x.URUNSATISFIYAT</td>
            <td>@x.TBL_KATEGORILER.KATEGORIAD</td>    @*KATEGORİ ADINI GETİRİYORUZ*@
            <td><a href="/Urunler/Sil/@x.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Urunler/Getir/@x.URUNID" class="btn btn-warning">GÜNCELLE</a></td>
        </tr>
    }

</table>
<br/>
<a href="/Urunler/YeniUrun" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
